<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicesvisioncommon>playservices-15.0.2/playservicesvisioncommon</_XbdKey_playservicesvisioncommon>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicesvisioncommon>m2repository\com\google\android\gms\play-services-vision-common\15.0.2\play-services-vision-common-15.0.2.aar</_XbdAarFile_playservicesvisioncommon>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicesvisioncommon>$(XamarinBuildDownloadDir)$(_XbdKey_playservicesvisioncommon)\play-services-vision-common-15.0.2.aar</_XbdAarFileFullPath_playservicesvisioncommon>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicesvisioncommon>Xamarin.GooglePlayServices.Vision.Common</_XbdAssemblyName_playservicesvisioncommon>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicesvisioncommon"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicesvisioncommon">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesvisioncommon)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesvisioncommon)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicesvisioncommon" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicesvisioncommon)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-vision-common/15.0.2/play-services-vision-common-15.0.2.aar</Url>
                <ToFile>play-services-vision-common-15.0.2.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>3e48f74f675242e7086cde169708ac8a</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicesvisioncommon)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicesvisioncommon)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>